{
  "compilerOptions": {
    "outDir": ".",
    "module": "CommonJS",
    "target": "es5",
    "lib": [
      "ES2018",
      "dom"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "types": [
    "node",
    "obsidian",
    "typePatches",
    "@testing-library/jest-dom",
    "jest"
  ]
}
